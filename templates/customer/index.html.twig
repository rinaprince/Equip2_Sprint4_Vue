{% extends 'base_back_3.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}
    <h1>Customer index</h1>

    <form method="GET" class="col-12 col-lg-auto my-3 mb-lg-0 me-lg-3" role="search">
        <div class="input-group">
            <div class="form-outline" data-mdb-input-init>
                <input type="search" id="form1" class="form-control" placeholder="Search..."/>
            </div>
            <button type="button" class="btn btn-primary" data-mdb-ripple-init>
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>


    <table class="table mt-3">
        <thead>
        <tr>
            <th>Name</th>
            <th>Lastname</th>
            <th>Address</th>
            <th>Dni</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Customer_type</th>
            <th>Operations</th>
        </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.name }}</td>
                <td>{{ customer.lastname }}</td>
                <td>{{ customer.address }}</td>
                <td>{{ customer.dni }}</td>
                <td>{{ customer.phone }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.type }}</td>
                <td>
                    {% if customer.type == "private" %}
                        <a href="{{ path('app_private_customer_show', {'id': customer.id}) }}">show</a>
                        <a href="{{ path('app_private_customer_edit', {'id': customer.id}) }}">edit</a>
                    {% elseif customer.type == "professional" %}
                        <a href="{{ path('app_professional_show', {'id': customer.id}) }}">show</a>
                        <a href="{{ path('app_professional_edit', {'id': customer.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(customers) }}
    </div>
{% endblock %}
